<!--pages/my/my.wxml-->
<view class="page" data-weui-theme="{{theme}}">
    <view class="page__bd page-weui page__bd_spacing">

        <!--Personal info panel-->
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{avatar}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">My Name</view>
                        <view class="weui-media-box__desc">My personal info</view>
                    </view>
                    <button class="mini-btn" type="mini" bindtap="onEdit">Edit</button>
                </navigator>
            </view>
        </view>

        <!--Icon panel-->
        <view class="weui-flex card">
            <block wx:for="{{iconList}}" wx:key="name">
                <navigator url="" class="weui-flex__item box">
                    <mp-icon icon="{{item.icon}}" color="{{item.color}}" size="{{item.size}}"></mp-icon>
                    <view>{{item.name}}</view>
                </navigator>
            </block>
        </view>

        <!--Contacts message list-->
        <view class="weui-panel weui-panel_access card">
            <block wx:for="{{contactList}}" wx:key="name">
                <view class="weui-panel__bd">
                    <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{item.avatar}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{item.name}}</view>
                            <view class="weui-media-box__desc">{{item.message}}</view>
                        </view>
                        <view class="weui-media-box__desc">{{item.timeString}}</view>
                    </navigator>
                </view>
            </block>
        </view>
    </view>

    <!--Test Dialog-->
    <mp-dialog title="test" show="{{dialogShow}}" bindbuttontap="tapDialogButton" buttons="{{buttons}}">
        <view>test content</view>
    </mp-dialog>
</view>