<!--pages/my/my.wxml-->
<view class="page" data-weui-theme="{{theme}}">
    <view class="page__bd page-weui page__bd_spacing">

        <!--Personal info panel-->
        <view class="weui-panel weui-panel_access">
            <view class="weui-panel__bd">
                <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                    <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                        <image class="weui-media-box__thumb" src="{{avatar}}" />
                    </view>
                    <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                        <view class="weui-media-box__title">My Name</view>
                        <view class="weui-media-box__desc">My personal info</view>
                    </view>
                    <button bindtap="onEdit">Edit</button>
                </navigator>
            </view>
        </view>

        <!--Icon panel-->
        <view class="weui-flex card">
            <block wx:for="{{iconList}}" wx:key="name">
                <navigator url="" class="weui-flex__item box">
                    <mp-icon icon="{{item.icon}}" size="25" />
                    <view>{{item.name}}</view>
                </navigator>
            </block>
        </view>

        <!--Contacts message list-->
        <view class="weui-panel weui-panel_access card">
            <block wx:for="{{contactList}}" wx:key="name">
                <view class="weui-panel__bd">
                    <navigator url="" class="weui-media-box weui-media-box_appmsg" hover-class="weui-cell_active">
                        <view class="weui-media-box__hd weui-media-box__hd_in-appmsg">
                            <image class="weui-media-box__thumb" src="{{item.avatar}}" />
                        </view>
                        <view class="weui-media-box__bd weui-media-box__bd_in-appmsg">
                            <view class="weui-media-box__title">{{item.name}}</view>
                            <view class="weui-media-box__desc">{{item.message}}</view>
                        </view>
                        <view class="weui-media-box__desc">{{item.timeString}}</view>
                    </navigator>
                </view>
            </block>
        </view>

        <view class="weui-panel">
            <view class="weui-panel__bd">
                <view class="weui-media-box weui-media-box_small-appmsg">
                    <view class="weui-cells weui-cells_in-small-appmsg">
                        <!--Settings-->
                        <navigator url="settings/settings" class="weui-cell weui-cell_access"
                            hover-class="weui-cell_active">
                            <view class="weui-cell__hd">
                                <mp-icon icon="setting" size="25" style="margin-right: 16px;vertical-align:middle;" />
                            </view>
                            <view class="weui-cell__bd weui-cell_primary">设置</view>
                            <view class="weui-cell__ft weui-cell__ft_in-access"></view>
                        </navigator>
                        <!--About-->
                        <navigator url="about/about" class="weui-cell weui-cell_access" hover-class="weui-cell_active">
                            <view class="weui-cell__hd">
                                <mp-icon icon="info" size="25" style="margin-right: 16px;vertical-align:middle;" />
                            </view>
                            <view class="weui-cell__bd weui-cell_primary">关于</view>
                            <view class="weui-cell__ft weui-cell__ft_in-access">版本 0.0.1</view>
                        </navigator>
                    </view>
                </view>
            </view>
        </view>
    </view>
</view>