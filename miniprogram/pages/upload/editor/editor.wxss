.container {
  /* position: absolute;  */
  width: 100%;
}

.ql-container {
  box-sizing: border-box;
  width: 100%;
  height: 100%;
  font-size: 16px;
  line-height: 1.5;
  overflow: auto;
  padding: 10px 10px 20px 10px;
  border: 1px solid #ECECEC;
  border-radius: 3%;
  margin: 0rpx auto;
  font-size: 14px;
  -webkit-overflow-scrolling: touch; /* 惯性滚动 */
}

.ql-active {
  color: #22C704;
}

.iconfont {
  display: inline-block;
  width: 30px;
  height: 30px;
  cursor: pointer;
  font-size: 20px;
}

.toolbar {
  box-sizing: border-box;
  padding: 0 10px;
  height: 40px;
  width: 95%;
  margin: 10rpx auto; 
  justify-content: space-between;
   border: 1px solid #E1D5EC;
  border-radius: 5%; 
  padding-bottom: constant(safe-area-inset-bottom); 
  padding-bottom: env(safe-area-inset-bottom);
}
