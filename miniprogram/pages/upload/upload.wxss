/* pages/upload/upload.wxss */
page{
  background-color: #F0EEF6;
}

.container-upload {
    position: relative;  
    padding: 20rpx;
    padding-top: 5rpx;
}

.remind-subtitle {
    text-align: center;
    font-weight: bold;
    margin: 10rpx;
}

.title-written {
    display: flex;
    background-color: #E1D5EC;
    border-radius: 3%;
    margin: 10rpx auto;
    /* width: 90%; */
    height: 50rpx;
    flex-direction: row;
    justify-content: right;
    padding: 25rpx;
}
.limit-number {
    color: grey;
    font-size: 14px;
}

.text-written {
  /* width: 90%; */
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx auto;
  border-radius: 3%;
  background-color: #E1D5EC;
  padding: 25rpx;
}

/* 图片九宫格 */
.Images-tool{
    display: flex;
    flex-wrap: wrap;
    flex-direction: row;
}
.Images-disp{
    width: 33.3%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin-top: 10rpx;
    position: relative;
    /* flex-direction: column; */
}
.Images-disp image{
    width: 220rpx;
    height: 220rpx;
    border-radius: 5%;
}
.Images-disp icon{
    position: absolute;
    width: -22rpx;
    height: -22rpx;
}

/* 上传图片按键 */
.button-uploadimages{
  margin-top: 10rpx;
  width: 220rpx;
  height: 220rpx;
  font-size: 90px;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  color: #E6E6E6;
  position: relative;
  border-radius: 5%;
}
/* .up_img_item{

} */

/* 分类选择按键 */
.choose-category {
  display: flex;
  flex-wrap: wrap;
}
.button-category {
  width: 80%;
  background-color: #E1D9EC;
  border-radius: 3%;
  margin: 10rpx auto;
}
.change-button-category{
  background-color: #e5e2eb;
}
/* 发表 */
.button-upload {
  width: 25%;
  background-color: #E1D9EC;
  /* font-size: 14px; */
  border-radius: 30rpx;
  margin: 10rpx auto;
}
.change-button-upload{
  background-color: #e5e2eb;
}
