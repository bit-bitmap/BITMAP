/* pages/upload/upload.wxss */
page{
  background-color: #F0EEF6;
}

.container-upload {
    position: relative;  
    padding: 20rpx;
}

.remind-subtitle {
    text-align: center;
    font-weight: bold;
}

.title-written {
    display: flex;
    background-color: #E1D5EC;
    border-radius: 3%;
    margin: 10rpx auto;
    /* width: 90%; */
    height: 50rpx;
    flex-direction: row;
    justify-content: right;
    padding: 25rpx;
}
.limit-number {
    color: grey;
    font-size: 14px;
}

.text-written {
  /* width: 90%; */
  display: flex;
  flex-wrap: wrap;
  margin: 10rpx auto;
  border-radius: 3%;
  background-color: #E1D5EC;
  padding: 25rpx;
}

/* 上传图片按键 */
.Images-tool button{
  margin: 0;
  width: 90px;
  height: 90px;
  font-size: 60px;
  padding: 0;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-left: 20rpx;
  margin-top: 20rpx;
  color: #E6E6E6;
}
