/* 分类选择按键 */
.choose-category {
  display: flex;
  flex-wrap: wrap;
}
.button-category {
  width: 80%;
  background-color: #E1D9EC;
  border-radius: 3%;
  margin: 10rpx auto;
}
.change-button-category{
  background-color: #e5e2eb;
}
/* 发表 */
.button-upload {
  width: 30%;
  background-color: #E1D9EC;
  /* font-size: 14px; */
  border-radius: 5%;
  margin: 10rpx auto;
}
.change-button-upload{
  background-color: #e5e2eb;
}

