<!--pages/info/info.wxml-->
<view class="page">
    <view class="page__bd">
        <mp-searchbar bindselectresult="selectResult" search="{{search}}"></mp-searchbar>
    </view>
</view>

<swiper class="swiper-container" indicator-dots="true" indicator-color="white" indicator-active-color="gray" autoplay="true" >
    <swiper-item>
        <view class="item" >官方新闻1</view>
    </swiper-item>
    <swiper-item>
        <view class="item" >官方新闻2</view>
    </swiper-item>
    <swiper-item>
        <view class="item" >官方新闻3</view>
    </swiper-item>
</swiper>

<scroll-view class="right-scroll-view" scroll-y :style="{height: wh + 'px'}">
    <view class="list-item" wx:for="{{articleList}}" >
        <navigator class="cate-url" :url="/pages/info/info">
            <view class="list-title">{{item.title}}</view>
            <view class="list-content">{{item.content}}</view>
            <view class="list-desc">
                <view>{{item.views}} 阅读 · {{item.commentCount}} 评论</view>
            </view>
        </navigator>
    </view>
</scroll-view> 

